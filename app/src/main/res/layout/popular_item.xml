<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="280dp"
            android:layout_height="190dp"
            app:riv_corner_radius="14dp"
            android:scaleType="centerCrop"
            android:id="@+id/pop_img"
            android:src="@mipmap/offers3"/>
        <TextView
            android:id="@+id/pop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Products"
            android:textSize="19dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text="Description"
            android:id="@+id/pop_des"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pop_rating_img"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ratingbar"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/pop_rating_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:textColor="#5C5656"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/pop_discount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:textColor="#1B5E20"
                android:textStyle="bold"
                android:text="Discount 20%"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>