<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        android:layout_marginTop="7dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DFFFD1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_catogory_detailed_item_image"
                android:layout_width="150dp"
                android:layout_margin="3dp"
                android:background="@drawable/border"
                android:scaleType="centerCrop"
                android:layout_height="170dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nav_category_detailed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nav_category_detailed_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:text="Product Price"
                    android:textColor="#298825"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_gravity="start"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                       android:id="@+id/detailed_add_item"
                        android:layout_width="38dp"
                        android:src="@drawable/add_circle"
                        android:layout_height="54dp"/>
                    <TextView
                        android:text="1"
                        android:layout_marginTop="11dp"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/detailed_item_added_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/detailed_remove_item"
                        android:layout_width="38dp"
                        android:src="@drawable/remove_circle"
                        android:layout_height="54dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="end"
                    android:id="@+id/detailed_add_to_cart_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="70dp"
                    android:layout_margin="8dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg_detailed"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
