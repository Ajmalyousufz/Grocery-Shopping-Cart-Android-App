<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlaceOrderActivity">

    <TextView
        android:id="@+id/place_order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Order Has been Placed"
        android:textAlignment="center"
        android:textColor="#439E40"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/place_order_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintVertical_bias=".2"
        android:scaleType="centerCrop"
        android:src="@drawable/placedorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_order_text" />

    <TextView
        android:id="@+id/place_order_thank_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for purchasing our product\nPlease Come Again"
        android:textAlignment="center"
        android:textColor="#9E4053"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_order_image" />

</androidx.constraintlayout.widget.ConstraintLayout>